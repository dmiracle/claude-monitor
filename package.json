{
  "name": "claude-monitor",
  "version": "1.0.0",
  "description": "Monitor running Claude Code instances",
  "main": "src/main.js",
  "author": "Dylan Miracle",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmiracle/claude-monitor.git"
  },
  "homepage": "https://github.com/dmiracle/claude-monitor",
  "keywords": ["claude", "electron", "monitoring", "developer-tools", "ai"],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.github.dmiracle.claude-monitor",
    "productName": "Claude Monitor",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png"
    }
  }
}
